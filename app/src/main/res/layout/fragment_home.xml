<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.lumisdinos.chessclock.ui.home.HomeViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.home.HomeFragment">

        <ImageView
            android:id="@+id/blackButtonView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple"
            android:onClick="@{() -> viewModel.clickOnBlackButtonView()}"
            android:padding="@dimen/space_xxlarge"
            android:tag="black"
            android:rotation="180"
            app:blackButtonsBG="@{viewModel.blackButtonBG}"
            app:isWhiteFirst="@{viewModel.isWhiteFirst}"
            app:layout_constraintBottom_toTopOf="@+id/guidelineUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/blackTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_small"
            android:rotation="180"
            android:tag="black"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/clock_text_size"
            android:textStyle="bold"
            app:buttonTextColor="@{viewModel.isWhiteFirst}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/blackButtonView"
            app:restClockTime="@{viewModel.restTimeBlack}" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.46" />


        <LinearLayout
            android:id="@+id/centralPanelLLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/guidelineDown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guidelineUp">

            <ImageButton
                android:id="@+id/showMenuIv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/border_green_no_bg"
                android:contentDescription="@string/drag"
                android:foreground="@drawable/ripple"
                android:onClick="@{() -> viewModel.clickShowMenu()}"
                android:paddingStart="@dimen/space_normal"
                android:paddingEnd="@dimen/space_normal"
                android:src="@drawable/ic_chevron_right_black_24dp" />

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/space_small"
                android:paddingEnd="@dimen/space_small"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/time_control_text_size"
                android:textStyle="bold"
                android:background="@drawable/border_green_no_bg"
                android:gravity="center_vertical"
                app:timeControlFromGame="@{viewModel.timeControl}"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/deleteIb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_green_no_bg"
                android:foreground="@drawable/ripple"
                android:onClick="@{() -> viewModel.clickOnPause()}"
                app:changePausedIcon="@{viewModel.changedToPauseIcon}"
                tools:ignore="ContentDescription" />


        </LinearLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.54" />


        <ImageView
            android:id="@+id/whiteButtonView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple"
            android:onClick="@{() -> viewModel.clickOnWhiteButtonView()}"
            android:padding="@dimen/space_xxlarge"
            android:tag="white"
            app:isWhiteFirst="@{viewModel.isWhiteFirst}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guidelineDown"
            app:whiteButtonsBG="@{viewModel.whiteButtonBG}"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/whiteTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small"
            android:tag="white"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/clock_text_size"
            android:textStyle="bold"
            app:buttonTextColor="@{viewModel.isWhiteFirst}"
            app:layout_constraintBottom_toBottomOf="@+id/whiteButtonView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:restClockTime="@{viewModel.restTimeWhite}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>